<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Promosi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingBottom="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/promosikan"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:letterSpacing="0.05"
                    android:text="Promosikan Wisata Anda !"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_height="3dp">

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Lengkapi Data"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="serif-monospace"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                </TextView>



                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Nama Objek Wisata"
                        android:textColor="#535353"
                        android:layout_height="wrap_content">
                    </TextView>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/editNamaWisataP"
                            android:layout_height="wrap_content"
                            android:hint="Nama Wisata"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/form_btn"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <Button
                            android:background="@drawable/bg_round"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/btn_tampilFotoWisata"
                            android:layout_width="wrap_content"
                            android:text="Pilih Gambar Maksimal 4 Foto"
                            android:layout_height="wrap_content">
                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/txtNamaWisata"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="Nama Wisata"
                            android:layout_height="wrap_content">
                        </TextView>

                        <LinearLayout
                            android:id="@+id/formfoto1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/foto1"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/ic_baseline_image_search_24"
                                android:layout_width="150dp"
                                android:layout_height="150dp">
                            </ImageView>

                            <ImageView
                                android:id="@+id/foto2"
                                android:layout_marginLeft="20dp"
                                android:layout_width="150dp"
                                android:src="@drawable/ic_baseline_image_search_24"
                                android:layout_height="150dp">
                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/formfoto2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/foto3"
                                android:layout_marginRight="20dp"
                                android:layout_width="150dp"
                                android:src="@drawable/ic_baseline_image_search_24"
                                android:layout_height="150dp">
                            </ImageView>

                            <ImageView
                                android:id="@+id/foto4"
                                android:src="@drawable/ic_baseline_image_search_24"
                                android:layout_marginLeft="20dp"
                                android:layout_width="150dp"
                                android:layout_height="150dp">
                            </ImageView>

                        </LinearLayout>

                    </LinearLayout>




                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Alamat Objek Wisata"
                        android:layout_marginTop="10dp"
                        android:textColor="#535353"
                        android:layout_height="wrap_content">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Provinsi"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <Spinner
                            android:id="@+id/spinner_kota"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Provinsi"
                                android:id="@+id/editProvinsi"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Kabupaten"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Kabupaten"
                                android:id="@+id/editKabupaten"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Kecamatan"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Kecamatan"
                                android:id="@+id/editKecamatan"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Alamat"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content">
                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/editAlamat"
                                android:hint="Masukkan Detail Jalan"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Harga Tiket Masuk"
                    android:layout_marginTop="10dp"
                    android:textColor="#535353"
                    android:layout_height="wrap_content">
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Harga Tiket"
                        android:id="@+id/editTiket"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="No Telepon"
                    android:layout_marginTop="10dp"
                    android:textColor="#535353"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+62"
                            android:enabled="false"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="82100998877"
                            android:id="@+id/editTelepon"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="No KTP"
                    android:layout_marginTop="10dp"
                    android:textColor="#535353"
                    android:layout_height="wrap_content">
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor KTP"
                        android:id="@+id/editKTP"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deskripsi"
                    android:layout_marginTop="10dp"
                    android:textColor="#535353"
                    android:layout_height="wrap_content">
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Makanan dan Minuman"
                        android:id="@+id/editDeskripsi"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btn_promosi"
                    android:layout_marginTop="20dp"
                    android:text="Ajukan Promosi"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_round"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                </Button>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"/>

</androidx.constraintlayout.widget.ConstraintLayout>